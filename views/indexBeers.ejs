<h1>Your beerIndex Page is Rendering</h1>

<div class="indexWines">

    <h1>My Beer List:</h1>

    <form action="/beers/new">
        <input type="submit" value="Creat a New Beer">
    </form>

    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Brewery</th>
                <th>Type</th>
                <th>ABV%</th>
                <th>Liked</th>
            </tr>
        </thead>
        <tbody>

            <% items.forEach( (item) => { %>
               
                <tr>

                    <td><a href="/beers/<%= item.id %>"> <%= item.name %> </a></td>
                    <td> <%= item.brewery %> </td>
                    <td> <%= item.type %> </td>
                    <td> <%= item.abv %> % </td>
                    
                    <% if(item.liked === true) { %>
                        <td> Liked: Yes </td>
                    <% } else { %>
                        <td>Liked: No</td>
                    <% } %>
                    

                </tr>
               
            <% }) %>  

        </tbody>
    </table>

</div>
